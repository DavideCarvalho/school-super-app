// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model School {
  id      String @id @default(cuid())
  name    String
  address String
  city    String
  state   String
  zip     String
  phone   String
  email   String
  website String
  logo    String
  slug    String
  files   File[]
  users   User[]
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  schoolId  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  school School @relation(fields: [schoolId], references: [id])
}

model File {
  id        String   @id @default(cuid())
  name      String
  path      String
  schoolId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  school School @relation(fields: [schoolId], references: [id])
}
