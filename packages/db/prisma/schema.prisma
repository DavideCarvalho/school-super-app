// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model School {
  id          String       @id @default(cuid())
  name        String
  slug        String
  Users       User[]
  SchoolYears SchoolYear[]
  Subjects    Subject[]
}

model User {
  id        String   @id @default(cuid())
  name      String
  slug      String
  email     String   @unique
  schoolId  String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teacherId String?

  School  School    @relation(fields: [schoolId], references: [id])
  Role    Role      @relation(fields: [roleId], references: [id])
  Teacher Teacher[]

  @@index([schoolId])
  @@index([roleId])
}

model Teacher {
  id                String            @id
  TeacherHasClasses TeacherHasClass[]
  User              User              @relation(fields: [id], references: [id])

  @@index([id])
}

model TeacherHasClass {
  id        String   @id @default(cuid())
  teacherId String
  classId   String
  subjectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Teacher Teacher @relation(fields: [teacherId], references: [id])
  Class   Class   @relation(fields: [classId], references: [id])
  Subject Subject @relation(fields: [subjectId], references: [id])
  File    File[]

  @@unique([teacherId, classId, subjectId])
  @@index([teacherId])
  @@index([classId])
  @@index([subjectId])
}

model Subject {
  id              String            @id @default(cuid())
  name            String
  slug            String
  schoolId        String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  TeacherHasClass TeacherHasClass[]
  School          School            @relation(fields: [schoolId], references: [id])

  @@index([schoolId])
}

model File {
  id                String   @id @default(cuid())
  name              String
  path              String
  teacherHasClassId String
  status            String
  frontAndBack      Boolean  @default(false)
  quantity          Int      @default(1)
  dueDate           DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  TeacherHasClass TeacherHasClass @relation(fields: [teacherHasClassId], references: [id])

  @@index([teacherHasClassId])
}

model Role {
  id    String @id @default(cuid())
  name  String
  Users User[]
}

model SchoolYear {
  id        String   @id @default(cuid())
  name      String
  slug      String
  schoolId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  School  School  @relation(fields: [schoolId], references: [id])
  Classes Class[]

  @@index([schoolId])
}

model Class {
  id           String   @id @default(cuid())
  name         String
  slug         String
  schoolYearId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  SchoolYear      SchoolYear        @relation(fields: [schoolYearId], references: [id])
  TeacherHasClass TeacherHasClass[]

  @@index([schoolYearId])
}
